# Talentora Webapp Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ===== DOCKER HUB =====
DOCKERHUB_USERNAME=your_dockerhub_username
DOCKERHUB_TOKEN=your_dockerhub_access_token

# ===== SUPABASE =====
# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL="http://127.0.0.1:54321" # Your Supabase anon key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# Your Supabase service role key (keep this secret!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
NEXT_PUBLIC_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase Database Configuration
SUPABASE_PASSWORD=your_secure_database_password
SUPABASE_CONNECTION_STRING=postgresql://postgres:your_password@localhost:5432/postgres
SUPABASE_ACCESS_TOKEN=your_supabase_access_token

# GitHub OAuth for Supabase Auth
SUPABASE_AUTH_EXTERNAL_GITHUB_CLIENT_ID=your_github_oauth_client_id
SUPABASE_AUTH_EXTERNAL_GITHUB_SECRET=your_github_oauth_client_secret
SUPABASE_AUTH_EXTERNAL_GITHUB_REDIRECT_URI=https://your-domain.com/auth/callback

# ===== APPLICATION =====
# Your application URL
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_BASE_URL=https://your-domain.com
# JWT secret for authentication (generate a secure random string)
JWT_SECRET=your_jwt_secret_key_here
# Database URL for server-side operations
NEXT_PUBLIC_DATABASE_URL=https://your-project.supabase.co

# ===== STRIPE PAYMENTS =====
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ===== AI SERVICES =====
# Groq API for AI processing
NEXT_PUBLIC_GROQ_API_KEY=your_groq_api_key
# OpenAI API (if using OpenAI instead of Groq)
OPENAI_API_KEY=your_openai_api_key

# ===== THIRD-PARTY INTEGRATIONS =====
# Merge API for ATS integrations
NEXT_PUBLIC_MERGE_API_KEY=your_merge_api_key
# Cartesia API for voice synthesis
NEXT_PUBLIC_CARTESIA_API_KEY=your_cartesia_api_key
# Daily API for video calls
NEXT_PUBLIC_DAILY_API_KEY=your_daily_api_key
NEXT_PUBLIC_DAILY_BOT_API_KEY=your_daily_bot_api_key

# ===== LIVEKIT (Video/Audio) =====
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
NEXT_PUBLIC_LIVEKIT_URL=wss://your-livekit-server.com

# ===== AWS SERVICES =====
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# ===== EMAIL SERVICES =====
# Resend API for email sending
RESEND_API_KEY=your_resend_api_key

# ===== OPTIONAL FEATURES =====
# Manual room entry for video calls
NEXT_PUBLIC_MANUAL_ROOM_ENTRY=false
# Interview bot URL
INTERVIEW_BOT_URL=https://your-interview-bot.com

# ===== STAGING/PRODUCTION SPECIFIC =====
# Use different values for staging vs production
NEXT_PUBLIC_STAGING_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_STAGING_SUPABASE_ANON_KEY=your_staging_supabase_anon_key
NEXT_PUBLIC_PRODUCTION_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_PRODUCTION_SUPABASE_ANON_KEY=your_production_supabase_anon_key

# Different GitHub redirect URIs for staging vs production
STAGING_SUPABASE_AUTH_EXTERNAL_GITHUB_REDIRECT_URI=https://staging.your-domain.com/auth/callback
PRODUCTION_SUPABASE_AUTH_EXTERNAL_GITHUB_REDIRECT_URI=https://your-domain.com/auth/callback 